---
import Index from "../components/Index.svelte";
import { ClientRouter } from "astro:transitions";
import Links from "../components/Links.svelte";
import Logo from "../components/Logo.svelte";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>ResetXR - Centro VR l√≠der en Barcelona.</title>
	</head>
	<body>
		<Logo transition:name="logo" transition:persist />
		<slot />
		<div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 30vh; overflow: hidden;">
			<div style="position: relative; bottom: 0; left: 0; width: 100%; height: 100%; overflow: hidden;">
				<Links transition:name="links" transition:persist client:only />
			</div>
		</div>
	</body>
</html>

<style>
	@font-face {
		font-family: "Conthrax";
		src: url("/conthrax.otf") format("opentype");
	}

	html,
	body {
		margin: 0;
		padding: 0;
		overflow: hidden;
		font-family: "Conthrax", sans-serif;
	}
</style>

<Index client:only transition:persist />
<ClientRouter />